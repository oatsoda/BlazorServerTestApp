@page "/recipes"

@using BlazorServerTestApp.Data
@inject IRecipesService RecipesService

<h1>Recipes</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (m_Recipes == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <button class="btn btn-primary" @onclick="AddRecipe">Add Recipe</button>
    <br />

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Total Time</th>
                <th>Reference</th>
                <th>Created</th>
                <th>Last Updated</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var recipe in m_Recipes)
            {
                <tr id="@recipe.Id">
                    <td>@recipe.Name</td>
                    <td>@recipe.TotalMinutes</td>
                    <td>@recipe.Reference</td>
                    <td>@recipe.CreatedAt.ToString("g")</td>
                    <td>@recipe.UpdatedAt.ToString("g")</td>
                    <td><button class="btn btn-primary" @onclick="() => EditRecipe(recipe.Id)">Edit</button></td>
                </tr>
            }
        </tbody>
    </table>

    if (m_IsAdding)
    {
        <RecipesAdd ModalTitle="Add Recipe" OnClose="@CloseModals" />
    }
    else if (m_IsEditing)
    {
        <RecipesEdit ModalTitle="Edit Recipe" RecipeId="@m_EditingId" OnClose="@CloseModals" />
    }
}

@code {
    IEnumerable<Recipe> m_Recipes;

    bool m_IsAdding;
    bool m_IsEditing;
    Guid m_EditingId;

    protected override async Task OnInitializedAsync()
    {
        m_Recipes = await RecipesService.GetRecipes();
    }

    private void AddRecipe()
    {
        m_IsAdding = true;
    }

    private void EditRecipe(Guid id)
    {
        m_IsEditing = true;
        m_EditingId = id;
    }

    private void CloseModals()
    {
        m_IsAdding = false;
        m_IsEditing = false;
    }
}
